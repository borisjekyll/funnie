main()

#include <iostream>
#include <random>
#include <ctime>

using namespace std;

int main() {
  // Declare variables
  int age;
  string name;

  // Get the user's name
  cout << "What is your name? ";
  getline(cin, name);

  // Get the user's age
  cout << "How old are you? ";
  cin >> age;

  // Print a greeting
  cout << "Hello, " << name << "!" << endl;

  // Print the user's age
  cout << "You are " << age << " years old." << endl;

  return 0;
}
